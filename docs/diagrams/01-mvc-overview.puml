@startuml DaySave MVC Overview
!theme plain
title DaySave MVC Architecture - High Level Overview

' Define colors and styles
skinparam packageStyle rectangle
skinparam backgroundColor #F8F9FA
skinparam package {
    BackgroundColor #E3F2FD
    BorderColor #1976D2
    FontColor #1976D2
    FontStyle bold
}
skinparam rectangle {
    BackgroundColor #FFF3E0
    BorderColor #F57C00
    FontColor #E65100
}

' Main Layers
package "Presentation Layer" {
    rectangle "Views (EJS Templates)" as Views {
        note right : 49+ EJS templates\nBootstrap 5 UI\nCSP Compliant
    }
}

package "Controller Layer" {
    rectangle "Route Controllers" as Routes {
        note right : 12 route handlers\nRESTful endpoints\nAPI management
    }
    
    rectangle "Business Services" as Services {
        note right : 31 service modules\nMultimedia processing\nAI integration
    }
}

package "Middleware Layer" {
    rectangle "Security & Validation" as Middleware {
        note right : Authentication\nAuthorization\nInput validation\nError handling
    }
}

package "Data Layer" {
    rectangle "Models & Database" as Models {
        note right : 75 Sequelize models\nMySQL database\n67 migrations
    }
}

package "External Services" {
    rectangle "AI & Cloud Services" as External {
        note right : OpenAI API\nGoogle Cloud AI\nCloud Storage\nOAuth providers
    }
}

' Main Application Entry Point
rectangle "Express Application" as App {
    note right : app.js\nNode.js + Express\nDocker containerized
}

' Define relationships
App --> Routes
App --> Middleware
Routes --> Services
Routes --> Views
Services --> Models
Services --> External
Middleware --> Models
Models --> External

' Flow indicators
Views -[hidden]-> Routes
Routes -[hidden]-> Services
Services -[hidden]-> Models

@enduml
