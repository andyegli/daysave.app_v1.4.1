# DaySave v1.4.1 Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=development
APP_PORT=3000
SESSION_SECRET=your-session-secret-change-in-production

# ===== DATABASE CONFIGURATION =====
DB_HOST=db
DB_PORT=3306
DB_USER=daysave
DB_USER_PASSWORD=your-password
DB_NAME=daysave_v141
DB_ROOT_PASSWORD=your-root-password

# ===== GOOGLE CLOUD CONFIGURATION =====
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Path to Google Cloud Service Account JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Alternative: Google API Key (if not using service account)
GOOGLE_API_KEY=your-google-api-key

# Google Cloud Speech-to-Text Configuration
GOOGLE_CLOUD_SPEECH_LANGUAGE=en-US

# Google Cloud Vision Configuration
GOOGLE_CLOUD_VISION_LANGUAGE=en

# ===== OPENAI CONFIGURATION =====
OPENAI_API_KEY=your-openai-api-key

# ===== OAUTH CONFIGURATION =====
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# ===== EMAIL CONFIGURATION =====
# Gmail Configuration (for nodemailer)
GMAIL_USER=your-gmail-username@gmail.com
GMAIL_PASS=your-gmail-app-password
GMAIL_FROM=noreply@daysave.app

# Alternative SendGrid Configuration
# SENDGRID_API_KEY=your-sendgrid-api-key
# FROM_EMAIL=noreply@daysave.app

# Base URL for email links (change for production)
BASE_URL=http://localhost:3000

# ===== MULTIMEDIA ANALYSIS CONFIGURATION =====
ANALYZER_PORT=3001
MULTIMEDIA_TEMP_DIR=./temp/multimedia
THUMBNAIL_COUNT=5
SPEAKER_CONFIDENCE_THRESHOLD=0.7

# ===== FILE UPLOAD CONFIGURATION =====
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,video/mp4,audio/mpeg,audio/wav

# ===== GOOGLE CLOUD STORAGE CONFIGURATION =====
GOOGLE_CLOUD_STORAGE_BUCKET=daysave-uploads

# ===== SECURITY CONFIGURATION =====
BCRYPT_ROUNDS=12

# ===== GOOGLE MAPS CONFIGURATION =====
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# SQL Query Logging (set to 'true' to enable detailed SQL output)
ENABLE_SQL_LOGGING=false 