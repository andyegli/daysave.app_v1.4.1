<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Fingerprinting - Admin Dashboard</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <style>
        .glassmorphism {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        }

        .security-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            border-radius: 0 0 20px 20px;
            margin-bottom: 2rem;
        }

        .risk-badge {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
        }

        .risk-minimal { background: #d4edda; color: #155724; }
        .risk-low { background: #fff3cd; color: #856404; }
        .risk-medium { background: #ffeaa7; color: #d68910; }
        .risk-high { background: #fadbd8; color: #a94442; }
        .risk-critical { background: #f8d7da; color: #721c24; }

        .device-card {
            transition: transform 0.2s;
        }

        .device-card:hover {
            transform: translateY(-2px);
        }

        .chart-container {
            position: relative;
            height: 300px;
            width: 100%;
        }

        .table-responsive {
            max-height: 500px;
            overflow-y: auto;
        }

        .fingerprint-hash {
            font-family: 'Monaco', 'Menlo', monospace;
            font-size: 0.8rem;
            background: #f8f9fa;
            padding: 0.2rem 0.4rem;
            border-radius: 4px;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Security Header -->
    <div class="security-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-0">
                        <i class="fas fa-fingerprint me-3"></i>
                        Device Fingerprinting Dashboard
                    </h1>
                    <p class="mb-0 opacity-75">Monitor and manage device security across the platform</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="/admin/fingerprinting-analytics" class="btn btn-light me-2">
                        <i class="fas fa-chart-line me-2"></i>Advanced Analytics
                    </a>
                    <a href="/admin" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-2"></i>Back to Admin
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Security Overview Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card glassmorphism h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-shield-alt text-primary fa-2x mb-3"></i>
                        <h5 class="card-title">Total Devices</h5>
                        <h2 class="text-primary mb-0" id="totalDevices">-</h2>
                        <small class="text-muted">Tracked devices</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card glassmorphism h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-check-circle text-success fa-2x mb-3"></i>
                        <h5 class="card-title">Trusted Devices</h5>
                        <h2 class="text-success mb-0" id="trustedDevices">-</h2>
                        <small class="text-muted">Low risk devices</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card glassmorphism h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-exclamation-triangle text-warning fa-2x mb-3"></i>
                        <h5 class="card-title">High Risk</h5>
                        <h2 class="text-warning mb-0" id="highRiskDevices">-</h2>
                        <small class="text-muted">Suspicious devices</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card glassmorphism h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-ban text-danger fa-2x mb-3"></i>
                        <h5 class="card-title">Blocked</h5>
                        <h2 class="text-danger mb-0" id="blockedAttempts">-</h2>
                        <small class="text-muted">Last 24 hours</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Risk Analysis Chart -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card glassmorphism">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line me-2"></i>
                            Risk Score Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="riskChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Login Attempts -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card glassmorphism">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-history me-2"></i>
                            Recent Login Attempts
                        </h5>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="refreshLoginAttempts()">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportLoginData()">
                                <i class="fas fa-download"></i> Export
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="loginAttemptsTable">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>User</th>
                                        <th>IP Address & Location</th>
                                        <th>Device Fingerprint</th>
                                        <th>Risk Score</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data loaded via JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Device Management -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card glassmorphism">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-mobile-alt me-2"></i>
                            Device Management
                        </h5>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="refreshDevices()">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                            <button type="button" class="btn btn-outline-warning btn-sm" onclick="bulkTrustDevices()">
                                <i class="fas fa-check-circle"></i> Bulk Trust
                            </button>
                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="bulkBlockDevices()">
                                <i class="fas fa-ban"></i> Bulk Block
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row" id="devicesContainer">
                            <!-- Device cards loaded via JavaScript -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Settings -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card glassmorphism">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Risk Thresholds
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="riskThresholdsForm">
                            <div class="mb-3">
                                <label for="lowThreshold" class="form-label">Low Risk Threshold</label>
                                <input type="range" class="form-range" id="lowThreshold" min="0" max="1" step="0.1" value="0.3">
                                <small class="text-muted">Current: <span id="lowThresholdValue">0.3</span></small>
                            </div>
                            <div class="mb-3">
                                <label for="mediumThreshold" class="form-label">Medium Risk Threshold</label>
                                <input type="range" class="form-range" id="mediumThreshold" min="0" max="1" step="0.1" value="0.6">
                                <small class="text-muted">Current: <span id="mediumThresholdValue">0.6</span></small>
                            </div>
                            <div class="mb-3">
                                <label for="highThreshold" class="form-label">High Risk Threshold</label>
                                <input type="range" class="form-range" id="highThreshold" min="0" max="1" step="0.1" value="0.8">
                                <small class="text-muted">Current: <span id="highThresholdValue">0.8</span></small>
                            </div>
                            <div class="mb-3">
                                <label for="blockThreshold" class="form-label">Auto-Block Threshold</label>
                                <input type="range" class="form-range" id="blockThreshold" min="0" max="1" step="0.1" value="0.9">
                                <small class="text-muted">Current: <span id="blockThresholdValue">0.9</span></small>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Thresholds
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card glassmorphism">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-shield-alt me-2"></i>
                            Security Features
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="enableFingerprinting" checked>
                            <label class="form-check-label" for="enableFingerprinting">
                                Enable Device Fingerprinting
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="enableFraudDetection" checked>
                            <label class="form-check-label" for="enableFraudDetection">
                                Enable Fraud Detection
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="autoTrustDevices">
                            <label class="form-check-label" for="autoTrustDevices">
                                Auto-Trust Low Risk Devices
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="logAllAttempts">
                            <label class="form-check-label" for="logAllAttempts">
                                Log All Login Attempts
                            </label>
                        </div>
                        <button type="button" class="btn btn-success" onclick="saveSecuritySettings()">
                            <i class="fas fa-save me-2"></i>Save Settings
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Device Fingerprinting Admin Script -->
    <script src="/js/admin-device-fingerprinting.js?v=<%= Date.now() %>"></script>
</body>
</html>