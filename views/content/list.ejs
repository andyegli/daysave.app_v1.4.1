<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Content Management - DaySave</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


  <style>
    .content-card {
      transition: box-shadow 0.2s;
      border-radius: 1rem;
      overflow: hidden;
      min-height: 180px;
      background: #fff;
    }
    .content-card:hover {
      box-shadow: 0 4px 24px rgba(0,0,0,0.08);
    }
    .content-card .card-title {
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      line-height: 1.3;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      word-break: break-word;
      max-width: 100%;
      margin-right: 8px;
    }
    .content-card .card-title:hover {
      color: #0d6efd;
    }
    .content-card .card-text {
      font-size: 0.95rem;
    }
    .content-card .badge {
      font-size: 0.85rem;
      margin-right: 0.2rem;
    }
    
    /* Compact button styling */
    .content-card .btn-sm {
      padding: 0.2rem 0.4rem;
      font-size: 0.8rem;
      border-width: 1px;
      min-width: 28px;
      height: 28px;
    }
    
    @media (max-width: 768px) {
      .content-card .card-title { 
        -webkit-line-clamp: 3;
        font-size: 1rem;
        margin-right: 4px;
      }
      .content-card { min-height: 140px; }
      .content-card .btn-sm {
        min-width: 24px;
        height: 24px;
        padding: 0.1rem 0.3rem;
      }
    }
    .content-card .flex-shrink-0 {
      min-width: 60px;
      max-width: 90px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .content-card .img-fluid {
      border-radius: 0.5rem;
      max-height: 80px;
      object-fit: cover;
    }
    
    /* Transcription Summary Styles */
    .transcription-summary {
      border-left: 3px solid #0d6efd;
      padding-left: 8px;
      margin-left: 4px;
    }
    
    .transcription-preview {
      background-color: #f8f9fa !important;
      border: 1px solid #e9ecef;
      font-size: 0.85rem;
      /* Removed fixed height and overflow-y to allow line-clamp to work */
      /* line-height is now handled inline for line-clamp functionality */
    }
    
    .transcription-preview:hover {
      background-color: #e9ecef !important;
    }
    
    /* Transcription text flow improvements */
    .transcription-text {
      width: 100% !important;
      white-space: normal !important;
      word-wrap: break-word !important;
      overflow-wrap: break-word !important;
      hyphens: auto !important;
      /* Note: display is handled inline for line-clamp functionality */
    }

    /* Force 4-line display for transcription text */
    .transcription-text[style*="-webkit-line-clamp"] {
      display: -webkit-box !important;
      -webkit-box-orient: vertical !important;
      overflow: hidden !important;
      text-overflow: ellipsis !important;
    }

    /* Ultra-specific 4-line class - highest priority with ID specificity */
    .content-card .transcription-preview .transcription-text,
    .content-card .transcription-text.force-4-lines,
    div[id*="transcription-summary"] .transcription-text {
      display: -webkit-box !important;
      -webkit-line-clamp: 4 !important;
      -webkit-box-orient: vertical !important;
      overflow: hidden !important;
      line-height: 1.6 !important;
      min-height: 88px !important;
      max-height: 88px !important;
      white-space: normal !important;
      text-overflow: ellipsis !important;
      word-wrap: break-word !important;
      font-size: 0.85rem !important;
      height: 88px !important;
    }
    
    /* Brain icon styling */
    .ai-analysis-btn .bi-brain {
      font-size: 1rem;
      color: #6f42c1;
    }
    
    .ai-analysis-btn:hover .bi-brain {
      color: #fff;
    }
    
    .ai-analysis-btn.btn-info .bi-brain {
      color: #fff;
    }

  </style>
</head>
<body>
  <!-- Header Include -->
  <%- include('../partials/header', { user, title: 'Content Management' }) %>

  <div class="container mt-5">
    <h2 class="fw-bold mb-4">Content Management</h2>

    <!-- Button to open Add Content Modal -->
    <div class="mb-3">
      <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addContentModal">
        <i class="bi bi-plus-circle"></i> Add New Content
      </button>
    </div>

    <% 
      const allTags = Array.from(new Set(
        (contentItems || []).flatMap(i => [
          ...(i.user_tags || []),
          ...(i.auto_tags || [])
        ]).filter(Boolean).map(t => t.trim())
      ));
      console.log('DEBUG: Content items count:', contentItems ? contentItems.length : 0);
    %>

    <!-- Filter Bar -->
    <div class="card mb-4 p-3">
      <form class="row g-2 align-items-end" method="get" action="/content" id="filterForm">




        <!-- Tag Filter with autocomplete -->
        <div class="col-md-2">
          <label for="filterTag" class="form-label mb-0">Tag</label>
          <div class="input-group">
            <input type="text" class="form-control" id="filterTag" name="tag" placeholder="Type to filter by tag" value="<%= typeof tag !== 'undefined' ? tag : '' %>" list="tagOptions">
            <datalist id="tagOptions">
              <% allTags.forEach(function(tagOption) { %>
                <option value="<%= tagOption %>">
              <% }); %>
            </datalist>
            <button class="btn btn-outline-secondary clear-filter-btn" type="button" data-target="#filterTag" title="Clear">
              <i class="bi bi-x-circle"></i>
            </button>
          </div>
        </div>
        <!-- Date Range Filter -->
        <div class="col-md-2">
          <label for="filterFrom" class="form-label mb-0">From</label>
          <div class="input-group">
            <input type="date" class="form-control" id="filterFrom" name="from" value="<%= typeof from !== 'undefined' ? from : '' %>">
            <button class="btn btn-outline-secondary clear-filter-btn" type="button" data-target="#filterFrom" title="Clear">
              <i class="bi bi-x-circle"></i>
            </button>
          </div>
        </div>
        <div class="col-md-2">
          <label for="filterTo" class="form-label mb-0">To</label>
          <div class="input-group">
            <input type="date" class="form-control" id="filterTo" name="to" value="<%= typeof to !== 'undefined' ? to : '' %>">
            <button class="btn btn-outline-secondary clear-filter-btn" type="button" data-target="#filterTo" title="Clear">
              <i class="bi bi-x-circle"></i>
            </button>
          </div>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100"><i class="bi bi-funnel"></i> Filter</button>
        </div>
        <div class="col-md-2">
          <button type="button" class="btn btn-outline-secondary w-100" id="clearAllFilters">
            <i class="bi bi-x-circle"></i> Clear All
          </button>
        </div>
      </form>
    </div>

    <!-- Content Cards Grid -->
    <div class="row row-cols-1 g-4" id="contentCardsGrid">
      <% if (contentItems && contentItems.length > 0) { %>
        <% contentItems.forEach(function(item) { %>
          <div class="col">
            <div class="card h-100 shadow-sm content-card flex-row flex-wrap" data-id="<%= item.id %>" data-item-type="<%= item.itemType %>" style="min-height:unset;">
              <div class="d-flex flex-row w-100">
                <!-- Thumbnail -->
                <div class="flex-shrink-0 d-flex align-items-center justify-content-center bg-light" style="width: 90px; height: 90px; overflow: hidden;">
                  <% if (item.itemType === 'file') { %>
                    <!-- File item thumbnail -->
                    <a href="/files/<%= item.metadata.fileId %>" target="_blank" rel="noopener noreferrer" style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                      <% if (item.metadata && item.metadata.thumbnail) { %>
                        <img src="<%= item.metadata.thumbnail %>" class="img-fluid" alt="<%= item.displayTitle %>" 
                             style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;"
                             onerror="this.onerror=null; this.style.display='none'; this.parentNode.innerHTML='<i class=\'<%= item.sourceInfo.logo %> fs-1\' style=\'color: <%= item.sourceInfo.color %>\'></i>';">
                      <% } else { %>
                        <i class="<%= item.sourceInfo.logo %> fs-1" style="color: <%= item.sourceInfo.color %>"></i>
                      <% } %>
                    </a>
                  <% } else { %>
                    <!-- Content item thumbnail -->
                    <% if (item.metadata && item.metadata.thumbnail) { %>
                      <a href="<%= item.url %>" target="_blank" rel="noopener noreferrer">
                        <img src="<%= item.metadata.thumbnail %>" class="img-fluid" alt="Thumbnail" 
                             onerror="this.onerror=null; this.style.display='none'; this.parentNode.innerHTML='<i class=\'bi bi-file-earmark-text fs-1 text-secondary\'></i>';">
                      </a>
                    <% } else if (item.url && item.url.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
                      <a href="<%= item.url %>" target="_blank" rel="noopener noreferrer">
                        <img src="<%= item.url %>" class="img-fluid" alt="Thumbnail"
                             onerror="this.onerror=null; this.style.display='none'; this.parentNode.innerHTML='<i class=\'bi bi-file-earmark-text fs-1 text-secondary\'></i>';">
                      </a>
                    <% } else { %>
                      <a href="<%= item.url %>" target="_blank" rel="noopener noreferrer">
                        <i class="bi bi-file-earmark-text fs-1 text-secondary"></i>
                      </a>
                    <% } %>
                  <% } %>
                </div>
                <!-- Card Body -->
                <div class="flex-grow-1 d-flex flex-row p-3 align-items-stretch">
                  <!-- Main Content (title, comment) -->
                  <div class="flex-grow-1 d-flex flex-column justify-content-between" style="min-width: 0; flex: 1 1 auto; max-width: calc(100% - 220px);">
                    <div>
                      <h5 class="card-title mb-1" title="<%= item.displayTitle %>"
                        data-bs-toggle="modal" data-bs-target="#viewContentModal" data-id="<%= item.id %>">
                        <%= item.displayTitle %>
                      </h5>
                      <% const comment = item.user_comments || ''; %>
                      <p class="card-text mb-2 text-muted small" style="white-space:normal; overflow-wrap:break-word;" title="<%= comment %>">
                        <%= comment.length > 200 ? comment.slice(0, 200) + '...' : comment %>
                        <% if (comment.length > 200) { %>
                          <a href="#" class="show-full-comment" data-id="<%= item.id %>">Show more</a>
                        <% } %>
                      </p>
                      
                      <!-- Transcription Summary -->
                      <% if (item.summary) { %>
                      <div class="transcription-summary mb-2" id="transcription-summary-<%= item.id %>">
                        <div class="position-relative">
                          <div class="transcription-preview bg-light p-2 rounded" style="font-size: 0.85rem; width: 100%; min-width: 250px;">
                            <div class="transcription-text text-dark force-4-lines" style="display: -webkit-box !important; -webkit-line-clamp: 4 !important; -webkit-box-orient: vertical !important; overflow: hidden !important; line-height: 1.6 !important; white-space: normal !important; word-wrap: break-word !important; width: 100%; height: 88px !important; min-height: 88px !important; max-height: 88px !important; font-size: 0.85rem !important;">
                              <%= item.summary %>
                            </div>
                          </div>
                          <button class="btn btn-sm btn-outline-primary position-absolute top-0 end-0 mt-1 me-1 py-0 px-2 copy-summary-btn" data-content-id="<%= item.id %>" title="Copy Summary" style="z-index: 10;">
                            <i class="bi bi-clipboard" style="font-size: 0.7rem;"></i>
                          </button>
                        </div>
                      </div>
                      <% } else { %>
                      <div class="transcription-summary mb-2" id="transcription-summary-<%= item.id %>" style="display: none;">
                        <div class="position-relative">
                          <div class="transcription-preview bg-light p-2 rounded small">
                            <div class="transcription-text text-muted force-4-lines" style="display: -webkit-box !important; -webkit-line-clamp: 4 !important; -webkit-box-orient: vertical !important; overflow: hidden !important; line-height: 1.6 !important; white-space: normal !important; word-wrap: break-word !important; width: 100%; height: 88px !important; min-height: 88px !important; max-height: 88px !important; font-size: 0.85rem !important;">Loading transcription...</div>
                          </div>
                          <button class="btn btn-sm btn-outline-primary position-absolute top-0 end-0 mt-1 me-1 py-0 px-2 copy-summary-btn" data-content-id="<%= item.id %>" title="Copy Summary" style="z-index: 10;">
                            <i class="bi bi-clipboard" style="font-size: 0.7rem;"></i>
                          </button>
                        </div>
                      </div>
                      <% } %>
                    </div>
                    <!-- Tags and Sentiment -->
                    <div class="mt-auto">
                      <!-- Tags -->
                      <div class="d-flex flex-wrap gap-1 align-items-center">
                        <% 
                          let tags = [];
                          // Handle auto_tags - ensure it's an array and not null/undefined
                          if (item.auto_tags && Array.isArray(item.auto_tags) && item.auto_tags.length > 0) {
                            tags = tags.concat(item.auto_tags.map(t => ({ tag: t, type: 'auto' })));
                          }
                          // Handle user_tags - ensure it's an array and not null/undefined  
                          if (item.user_tags && Array.isArray(item.user_tags) && item.user_tags.length > 0) {
                            tags = tags.concat(item.user_tags.map(t => ({ tag: t, type: 'user' })));
                          }
                          let shownTags = tags.slice(0, 4);
                          let moreTags = tags.length > 4 ? tags.length - 4 : 0;
                          let hiddenTags = tags.slice(4);
                        %>
                        <% shownTags.forEach(function(t) { %>
                          <span class="badge <%= t.type === 'auto' ? 'bg-info' : 'bg-success' %> tag-badge" data-tag="<%= t.tag %>">
                            <%= t.tag %>
                          </span>
                        <% }); %>
                        <% if (moreTags) { %>
                          <span class="badge bg-secondary more-tags-badge" style="cursor: pointer;" 
                                data-bs-toggle="modal" data-bs-target="#allTagsModal" 
                                data-content-id="<%= item.id %>"
                                data-all-tags="<%= encodeURIComponent(JSON.stringify(tags)) %>"
                                data-content-title="<%= (item.generated_title || item.title || 'Content').replace(/"/g, '&quot;') %>"
                                title="Click to see all tags">
                            +<%= moreTags %> more
                          </span>
                        <% } %>
                        
                        <!-- Sentiment Badge (moved from summary section) -->
                        <% if (item.sentiment) { %>
                          <% 
                            let sentimentData = item.sentiment;
                            if (typeof sentimentData === 'string') {
                              try {
                                sentimentData = JSON.parse(sentimentData);
                              } catch (e) {
                                sentimentData = null;
                              }
                            }
                            if (sentimentData && (sentimentData.label || sentimentData.sentiment)) {
                              const sentimentLabel = sentimentData.label || sentimentData.sentiment;
                              const confidence = sentimentData.confidence || 0;
                              let badgeClass = 'bg-secondary';
                              if (sentimentLabel === 'positive') badgeClass = 'bg-success';
                              else if (sentimentLabel === 'negative') badgeClass = 'bg-danger';
                              else if (sentimentLabel === 'neutral') badgeClass = 'bg-info';
                          %>
                            <span class="badge <%= badgeClass %> small ms-2">
                              <%= sentimentLabel %> (<%= Math.round(confidence * 100) %>%)
                            </span>
                          <% } %>
                        <% } %>
                      </div>
                    </div>
                  </div>
                  <!-- Right Info Column -->
                  <div class="d-flex flex-column align-items-end justify-content-between ms-3" style="min-width: 110px; max-width: 120px;">
                    <div class="text-end">
                      <div class="d-flex align-items-center justify-content-end mb-1">
                        <i class="bi <%= item.sourceInfo.logo %> me-1" style="color: <%= item.sourceInfo.color %>; font-size: 1rem;"></i>
                        <span class="fw-semibold small"><%= item.sourceInfo.source %></span>
                      </div>

                      <div class="text-muted small"><%= item.createdAt ? new Date(item.createdAt).toLocaleDateString() : '' %></div>
                      
                      <!-- AI Analysis Indicators -->
                      <div class="mt-2">
                        <div class="d-flex flex-wrap gap-1" id="ai-indicators-<%= item.id %>">
                          <!-- Indicators will be populated by JavaScript -->
                        </div>
                      </div>
                    </div>
                    
                    <!-- Compact Action Buttons -->
                    <div class="d-flex flex-column gap-1 mt-2">
                      <div class="d-flex gap-1">
                        <a href="#" class="btn btn-outline-primary btn-sm edit-content-btn" data-id="<%= item.id %>" data-bs-toggle="modal" data-bs-target="#editContentModal" title="Edit">
                          <i class="bi bi-pencil" style="font-size: 0.8rem;"></i>
                        </a>
                        <button class="btn btn-outline-info btn-sm ai-analysis-btn" data-id="<%= item.id %>" data-bs-toggle="modal" data-bs-target="#aiAnalysisModal" title="AI Analysis">
                          <i class="bi bi-brain" style="font-size: 0.8rem;"></i>
                        </button>
                      </div>
                      <div class="d-flex gap-1">
                        <button class="btn btn-outline-success btn-sm share-content-btn" data-id="<%= item.id %>" title="Share">
                          <i class="bi bi-share" style="font-size: 0.8rem;"></i>
                        </button>
                        <button class="btn btn-outline-danger btn-sm delete-content-btn" data-id="<%= item.id %>" data-item-type="<%= item.itemType %>" title="Delete">
                          <i class="bi bi-trash" style="font-size: 0.8rem;"></i>
                        </button>
                      </div>
                    </div>
                    
                    <div class="mt-1">
                      <input type="checkbox" class="form-check-input content-select-checkbox" data-id="<%= item.id %>">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col">
          <div class="alert alert-info">No content found. Click "Add New Content" to get started!</div>
        </div>
      <% } %>
    </div>

    <!-- Pagination (if needed) -->
    <% if (pagination && pagination.totalPages > 1) { %>
      <div class="row mt-4">
        <div class="col-12 d-flex justify-content-center">
          <nav>
            <ul class="pagination">
              <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Add Content Modal -->
  <div class="modal fade" id="addContentModal" tabindex="-1" aria-labelledby="addContentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form class="modal-content" id="addContentForm">
        <div class="modal-header">
          <h5 class="modal-title" id="addContentModalLabel">Add New Content</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Title Input -->
          <div class="mb-3">
            <label for="contentTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="contentTitle" name="title" placeholder="Content Title">
          </div>
          <!-- URL Input -->
          <div class="mb-3">
            <label for="contentUrl" class="form-label">Content URL</label>
            <input type="url" class="form-control" id="contentUrl" name="url" required placeholder="https://example.com/post">
          </div>
          <!-- User Comment -->
          <div class="mb-3">
            <label for="contentComment" class="form-label">Your Comment</label>
            <textarea class="form-control" id="contentComment" name="user_comments" rows="2"></textarea>
          </div>




          <!-- User Tags -->
          <div class="mb-3">
            <label for="contentTags" class="form-label">Tags (comma separated)</label>
            <input type="text" class="form-control" id="contentTags" name="user_tags" placeholder="tag1, tag2">
          </div>
          <!-- Group Assignment -->
          <div class="mb-3">
            <label for="contentGroups" class="form-label">Assign to Groups</label>
            <select class="form-select" id="contentGroups" name="group_ids" multiple>
              <% (contentGroups || []).forEach(function(group) { %>
                <option value="<%= group.id %>"><%= group.name %></option>
              <% }); %>
            </select>
            <div class="form-text">Hold Ctrl/Cmd to select multiple groups.</div>
          </div>
          <div id="addContentAlert" class="alert d-none mt-2"></div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Add Content</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit Content Modal -->
  <div class="modal fade" id="editContentModal" tabindex="-1" aria-labelledby="editContentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form class="modal-content" id="editContentForm">
        <input type="hidden" id="editContentId" name="id">
        <div class="modal-header">
          <h5 class="modal-title" id="editContentModalLabel">Edit Content</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Title Input -->
          <div class="mb-3">
            <label for="editContentTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="editContentTitle" name="title" placeholder="Content Title">
          </div>
          <!-- URL Input (readonly) -->
          <div class="mb-3">
            <label for="editContentUrl" class="form-label">Content URL</label>
            <input type="url" class="form-control" id="editContentUrl" name="url" readonly>
          </div>
          <!-- User Comment -->
          <div class="mb-3">
            <label for="editContentComment" class="form-label">Your Comment</label>
            <textarea class="form-control" id="editContentComment" name="user_comments" rows="2"></textarea>
          </div>




          <!-- User Tags -->
          <div class="mb-3">
            <label for="editContentTags" class="form-label">Tags (comma separated)</label>
            <input type="text" class="form-control" id="editContentTags" name="user_tags" placeholder="tag1, tag2">
          </div>
          <!-- Group Assignment -->
          <div class="mb-3">
            <label for="editContentGroups" class="form-label">Assign to Groups</label>
            <select class="form-select" id="editContentGroups" name="group_ids" multiple>
              <% (contentGroups || []).forEach(function(group) { %>
                <option value="<%= group.id %>"><%= group.name %></option>
              <% }); %>
            </select>
            <div class="form-text">Hold Ctrl/Cmd to select multiple groups.</div>
          </div>
          <div id="editContentAlert" class="alert d-none mt-2"></div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>

  <!-- View Content Modal (placeholder, to be filled by JS) -->
  <div class="modal fade" id="viewContentModal" tabindex="-1" aria-labelledby="viewContentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="viewContentModalLabel">Content Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="viewContentModalBody">
          <!-- Content details will be filled by JS -->
        </div>
      </div>
    </div>
  </div>

  <!-- All Tags Modal -->
  <div class="modal fade" id="allTagsModal" tabindex="-1" aria-labelledby="allTagsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="allTagsModalLabel">All Tags</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="allTagsModalBody">
          <!-- Tags will be populated by JavaScript -->
        </div>
      </div>
