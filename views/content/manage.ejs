<%- include('../partials/header', { user, title: 'Social Content Management' }) %>
<div class="container my-5">
  <h2 class="fw-bold mb-4 text-center">Social Content Management</h2>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% (contentItems || [1,2,3]).forEach(function(item, idx) { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="<%= item.image || '/public/images/content_section.png' %>" class="card-img-top" alt="Content Image" style="object-fit:cover; height:180px;">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= item.title || 'Content Title' %></h5>
            <p class="card-text"><%= item.description || 'Short description of the content goes here.' %></p>
            <div class="mt-auto">
              <a href="#" class="btn btn-primary btn-sm me-2">Edit</a>
              <a href="#" class="btn btn-danger btn-sm me-2">Delete</a>
              <a href="#" class="btn btn-success btn-sm">Share</a>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include('../partials/footer') %> 