# DaySave v1.4.1 Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
APP_PORT=3000
SESSION_SECRET=CHANGE_ME_SESSION_SECRET

# ===== DATABASE CONFIGURATION =====
# These settings match docker-compose.production.yml
DB_HOST=db
DB_PORT=3306
DB_USER=daysave
DB_USER_PASSWORD=CHANGE_ME_DB_USER_PASSWORD
DB_NAME=daysave_v141
DB_ROOT_PASSWORD=CHANGE_ME_DB_ROOT_PASSWORD

# ===== REDIS CONFIGURATION =====
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ===== GOOGLE CLOUD CONFIGURATION =====
# Your actual Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=daysave

# Path to Google Cloud Service Account JSON file (not needed in production VM)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Alternative: Google API Key (if not using service account)
GOOGLE_API_KEY=CHANGE_ME_GOOGLE_API_KEY

# Storage bucket for uploads and thumbnails
GOOGLE_CLOUD_STORAGE_BUCKET=CHANGE_ME_GOOGLE_CLOUD_STORAGE_BUCKET

# Google Cloud Speech-to-Text Configuration
GOOGLE_CLOUD_SPEECH_LANGUAGE=en-US

# Google Cloud Vision Configuration
GOOGLE_CLOUD_VISION_LANGUAGE=en

# NOTE: GOOGLE_APPLICATION_CREDENTIALS NOT needed in production
# Service account attached to VM provides automatic authentication

# ===== OPENAI CONFIGURATION =====
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY

# ===== OAUTH CONFIGURATION =====
# Google OAuth
GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET

# Microsoft OAuth
MICROSOFT_CLIENT_ID=CHANGE_ME_MICROSOFT_CLIENT_ID
MICROSOFT_CLIENT_SECRET=CHANGE_ME_MICROSOFT_CLIENT_SECRET

# Apple OAuth
APPLE_CLIENT_ID=CHANGE_ME_APPLE_CLIENT_ID
APPLE_CLIENT_SECRET=CHANGE_ME_APPLE_CLIENT_SECRET

# ===== EMAIL CONFIGURATION =====
# Gmail Configuration (for nodemailer)
GMAIL_USER=CHANGE_ME_GMAIL_USER
GMAIL_PASS=CHANGE_ME_GMAIL_PASS
GMAIL_FROM=CHANGE_ME_GMAIL_FROM

# Alternative SendGrid Configuration
# SENDGRID_API_KEY=CHANGE_ME_SENDGRID_API_KEY
# FROM_EMAIL=noreply@daysave.app

# Base URL for email links (change for production)
BASE_URL=CHANGE_ME_BASE_URL

# ===== MULTIMEDIA ANALYSIS CONFIGURATION =====
ANALYZER_PORT=3001
MULTIMEDIA_TEMP_DIR=/usr/src/app/multimedia-temp
THUMBNAIL_COUNT=5
SPEAKER_CONFIDENCE_THRESHOLD=0.7

# ===== FILE UPLOAD CONFIGURATION =====
# 50MB for production
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,video/mp4,audio/mpeg,audio/wav

# ===== GOOGLE MAPS CONFIGURATION =====
GOOGLE_MAPS_API_KEY=CHANGE_ME_GOOGLE_MAPS_API_KEY

# ===== SECURITY CONFIGURATION =====
BCRYPT_ROUNDS=12
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_JWT_REFRESH_SECRET

# CORS Configuration - Comma-separated list of allowed origins
ALLOWED_ORIGINS=CHANGE_ME_ALLOWED_ORIGINS

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=warn
LOG_FILE_PATH=/usr/src/app/logs/app.log

# SQL Query Logging (set to 'true' to enable detailed SQL output)
ENABLE_SQL_LOGGING=false

# Verbose Console Logging Controls
ENABLE_MULTIMEDIA_CONSOLE_LOGGING=false
ENABLE_STARTUP_VALIDATION_LOGGING=false
ENABLE_PERFORMANCE_CONSOLE_LOGGING=false
ENABLE_PROCESSOR_STEP_LOGGING=false

# Additional Console Logging Controls (set to 'false' for cleaner production experience)
ENABLE_AUTH_EVENT_LOGGING=false
ENABLE_STATUS_POLLING_LOGGING=false
ENABLE_ANALYSIS_REQUEST_LOGGING=false
ENABLE_PERFORMANCE_ALERT_LOGGING=false

# WebAuthn Configuration for production
WEBAUTHN_RP_ID=CHANGE_ME_WEBAUTHN_RP_ID
WEBAUTHN_RP_NAME=DaySave
WEBAUTHN_ORIGIN=CHANGE_ME_WEBAUTHN_ORIGIN
