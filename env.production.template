# DaySave v1.4.1 Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
APP_PORT=3000
SESSION_SECRET=CHANGE_ME_STRONG_SESSION_SECRET

# ===== DATABASE CONFIGURATION =====
# These settings match docker-compose.production.yml
DB_HOST=db
DB_PORT=3306
DB_USER=daysave
DB_USER_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD
DB_NAME=daysave_v141
DB_ROOT_PASSWORD=CHANGE_ME_STRONG_ROOT_PASSWORD

# ===== REDIS CONFIGURATION =====
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ===== GOOGLE CLOUD CONFIGURATION =====
# Your actual Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=daysave-v1412

# Storage bucket for uploads and thumbnails
GOOGLE_CLOUD_STORAGE_BUCKET=daysave-uploads

# Google Cloud Speech-to-Text Configuration
GOOGLE_CLOUD_SPEECH_LANGUAGE=en-US

# Google Cloud Vision Configuration
GOOGLE_CLOUD_VISION_LANGUAGE=en

# NOTE: GOOGLE_APPLICATION_CREDENTIALS NOT needed in production
# Service account attached to VM provides automatic authentication

# ===== OPENAI CONFIGURATION =====
OPENAI_API_KEY=CHANGE_ME_OPENAI_KEY

# ===== OAUTH CONFIGURATION =====
# Google OAuth
GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET

# Microsoft OAuth
MICROSOFT_CLIENT_ID=CHANGE_ME_MICROSOFT_CLIENT_ID
MICROSOFT_CLIENT_SECRET=CHANGE_ME_MICROSOFT_CLIENT_SECRET

# ===== EMAIL CONFIGURATION =====
# Gmail Configuration (for nodemailer)
GMAIL_USER=CHANGE_ME_GMAIL_USER
GMAIL_PASS=CHANGE_ME_GMAIL_APP_PASSWORD
GMAIL_FROM=noreply@your-domain.com

# Production Base URL (CHANGE TO YOUR DOMAIN)
BASE_URL=https://your-domain.com

# ===== MULTIMEDIA ANALYSIS CONFIGURATION =====
MULTIMEDIA_TEMP_DIR=/usr/src/app/multimedia-temp
THUMBNAIL_COUNT=5
SPEAKER_CONFIDENCE_THRESHOLD=0.7

# ===== FILE UPLOAD CONFIGURATION =====
# 50MB for production
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,video/mp4,audio/mpeg,audio/wav

# ===== GOOGLE MAPS CONFIGURATION =====
GOOGLE_MAPS_API_KEY=CHANGE_ME_GOOGLE_MAPS_KEY

# ===== SECURITY CONFIGURATION =====
BCRYPT_ROUNDS=12
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_JWT_REFRESH_SECRET

# CORS Configuration for production domain
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=warn
LOG_FILE_PATH=/usr/src/app/logs/app.log

# Disable verbose logging in production
ENABLE_SQL_LOGGING=false
ENABLE_MULTIMEDIA_CONSOLE_LOGGING=false
ENABLE_STARTUP_VALIDATION_LOGGING=false
ENABLE_PERFORMANCE_CONSOLE_LOGGING=false
ENABLE_PROCESSOR_STEP_LOGGING=false
ENABLE_AUTH_EVENT_LOGGING=false
ENABLE_STATUS_POLLING_LOGGING=false
ENABLE_ANALYSIS_REQUEST_LOGGING=false
ENABLE_PERFORMANCE_ALERT_LOGGING=false

# WebAuthn Configuration for production
WEBAUTHN_RP_ID=your-domain.com
WEBAUTHN_RP_NAME=DaySave
# WEBAUTHN_ORIGIN will be set dynamically in production
